[core]
autocrlf = input
excludesfile = ~/.gitignore_global
pager = less -x5,9

[user]
name = Andreas Lutro
email = anlutro@gmail.com

[color]
ui = true

[credential]
helper = cache --timeout=600

[alias]
cam = commit -am
cb = checkout -b
cm = commit -m
co = checkout
dc = diff --cached
ds = diff --staged
lg = log --graph --abbrev-commit --pretty=format:'%C(red)%h%C(reset) \
%s%C(yellow)%d%C(reset) %C(bold blue)<%an>%C(reset) %C(green)%ai%C(reset)'
mfo = merge --ff-only
mnf = merge --no-ff
push-all = !git remote | xargs -L1 git push
st = status
tags = !git tag -n | sort -V | less -FX +G
up = remote update -p

[push]
default = current

[pull]
ff = only

[url "git@github.com:"]
pushInsteadOf = https://github.com/
