[core]
autocrlf = input
excludesfile = ~/.gitignore_global

[user]
name = Andreas Lutro
email = anlutro@gmail.com

[color]
ui = true

[credential]
helper = cache --timeout=600

[alias]
cam = commit -am
cb = checkout -b
cm = commit -m
co = checkout
dc = diff --cached
ds = diff --staged
lg = log --graph --pretty=format:'%Cred%h %Cgreen%ci%Creset %s %C(bold blue)<%an>%C(yellow)%d%Creset' --abbrev-commit
mfo = merge --ff-only
mnf = merge --no-ff
st = status
tags = !git tag -n | sort -V | less -FX +G
up = remote update -p

[push]
default = current

[pull]
ff = only

[url "git@github.com:"]
pushInsteadOf = https://github.com/
