#!/bin/bash
set -euo pipefail
source $TESTS_DIR/common.sh

source $CONFIG_DIR/shell/shrc
tmpdir=$(mktemp -d)
cd $tmpdir

touch test.pyc
mkdir foo
touch foo/test.pyc
mkdir __pycache__
mkdir foo/__pycache__

clear-pycache

assert_test ! -f test.pyc
assert_test ! -f foo/test.pyc
assert_test ! -d __pycache__
assert_test ! -d foo/__pycache__

rm -rf $tmpdir
