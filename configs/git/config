[alias]
a = commit --amend
ane = commit --amend --no-edit
b = branch
ba = branch --all
c = commit
cb = checkout -b
cm = commit --message
co = checkout
d = diff
dw = diff --color-words
dc = diff --cached
dcw = diff --cached --color-words
ds = diff --staged
dsw = diff --staged --color-words
l = log --graph --abbrev-commit --pretty=format:'%C(red)%h%C(reset) %s%C(yellow)%d%C(reset)'
ll = log --graph --abbrev-commit --pretty=format:'%C(red)%h%C(reset) %C(green)%ai%C(reset) %s %C(bold blue)<%an>%C(reset) %C(yellow)%d%C(reset)'
lp = log --patch
mfo = merge --ff-only
mnf = merge --no-ff
push-all = !git remote | xargs -L1 git push
r = remote --verbose
ra = remote add
rrm = remote rm
s = status
st = status
ss = show --stat
tags = !git tag -n | sort -V | less -FX +G
up = remote update --prune

[color]
ui = true

[core]
autocrlf = input

[credential]
helper = cache --timeout=600

[diff]
algorithm = patience

[log]
decorate = true

[push]
default = current
followTags = true

[pull]
ff = only

[rerere]
enabled = 1

[url "git@github.com:"]
pushInsteadOf = https://github.com/

[url "git@gist.github.com:"]
pushInsteadOf = https://gist.github.com/

# use this for name/email, auth tokens etc
[include]
path = config.local
path = .gitconfig.local

# do not try to guess name/email
[user]
useConfigOnly = true
