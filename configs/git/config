[alias]
a = commit --amend
aa = commit --all --amend
aane = commit --all --amend --no-edit
ane = commit --amend --no-edit
c = commit
ca = commit --all
cam = commit --all --message
cb = checkout --branch
cm = commit --message
co = checkout
d = diff
dc = diff --cached
ds = diff --staged
l = log --graph --abbrev-commit --pretty=format:'%C(red)%h%C(reset) %s%C(yellow)%d%C(reset)'
ll = log --graph --abbrev-commit --pretty=format:'%C(red)%h%C(reset) %C(green)%ai%C(reset) %s %C(bold blue)<%an>%C(reset) %C(yellow)%d%C(reset)'
lp = log --patch
mfo = merge --ff-only
mnf = merge --no-ff
push-all = !git remote | xargs -L1 git push
r = remote --verbose
ra = remote add
rrm = remote rm
s = status
st = status
tags = !git tag -n | sort -V | less -FX +G
up = remote update -p

[color]
ui = true

[core]
autocrlf = input

[credential]
helper = cache --timeout=600

[diff]
algorithm = patience

[push]
default = current

[pull]
ff = only

[url "git@github.com:"]
pushInsteadOf = https://github.com/

# use this for name/email, auth tokens etc
[include]
path = config.local
